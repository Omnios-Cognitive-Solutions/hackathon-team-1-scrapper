    "version": "0.2.0",
    "configurations": [
        {
            "name": "Pytest: Scrapping tests",
            "type": "python",
            "request": "launch",
            "stopOnEntry": false,
            "env": {
                "PYTHONPATH": "${workspaceRoot}"
            },
            "module": "pytest",
            "args": [
                "-sv",
                "tests/test_scrapper.py"
            ],
            "cwd": "${workspaceRoot}",
            "envFile": "${workspaceRoot}/.env"
        },
        {
            "name": "Pytest: All tests",
            "type": "python",
            "request": "launch",
            "stopOnEntry": false,
            "env": {
                "PYTHONPATH": "${workspaceRoot}"
            },
            "module": "pytest",
            "args": [
                "-sv"
            ],
            "cwd": "${workspaceRoot}",
            "envFile": "${workspaceRoot}/.env"
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}